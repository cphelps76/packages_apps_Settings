<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/interface_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceScreen android:key="logo1"
        android:layout="@layout/logo_row" />

    <PreferenceCategory
        android:key="status_bar_general"
        android:title="@string/status_bar_general_catagory">

        <PreferenceScreen
            android:key="status_bar"
            android:fragment="com.android.settings.demented.StatusBar"
            android:title="@string/status_bar_title" />

        <PreferenceScreen
            android:key="notification_drawer"
            android:fragment="com.android.settings.demented.PowerWidget"
            android:title="@string/notification_drawer_title" />

        <PreferenceScreen
            android:key="statusbar_toggles"
            android:fragment="com.android.settings.demented.StatusBarToggles"
            android:title="@string/title_statusbar_toggles" />

        <CheckBoxPreference
            android:key="statusbar_hidden"
            android:title="@string/statusbar_hide_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="advanced_catagory"
        android:title="@string/advanced_catagory_title">

        <PreferenceScreen
            android:key="advanced_settings"
            android:id="@+id/advanced_settings"
            android:title="@string/advanced_device_settings_title">
        <intent
                android:action="com.cyanogenmod.action.LAUNCH_DEVICE_SETTINGS"
                android:targetPackage="com.cyanogenmod.settings.device"
                android:targetClass="com.cyanogenmod.settings.device.DeviceSettings" />
        </PreferenceScreen>

        <PreferenceScreen
            android:key="demented_app_ops"
            android:title="@string/demented_app_ops_title">
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.android.settings"
                    android:targetClass="com.android.settings.Settings$AppOpsSummaryActivity" />
        </PreferenceScreen>

        <PreferenceScreen
            android:id="@+id/performance_settings"
            android:key="performance_settings"
            android:fragment="com.android.settings.demented.PerformanceSettings"
            android:title="@string/performance_settings_title" />

        <PreferenceScreen
            android:key="lock_clock"
            android:title="@string/lock_clock_title">
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.cyanogenmod.lockclock"
                    android:targetClass="com.cyanogenmod.lockclock.preference.Preferences" />
        </PreferenceScreen>

        <PreferenceScreen
            android:key="hardware_keys"
            android:fragment="com.android.settings.demented.HardwareKeys"
            android:title="@string/hardware_keys_title" />

        <PreferenceScreen
            android:key="power_menu"
            android:title="@string/power_menu_title"
            android:fragment="com.android.settings.demented.PowerMenu" />

        <PreferenceScreen
            android:key="sound_settings"
            android:fragment="com.android.settings.demented.SoundSettings"
            android:title="@string/sound_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="demented_navbar"
        android:title="@string/demented_navbar">

        <PreferenceScreen
            android:key="nav_bar"
            android:fragment="com.android.settings.demented.Navbar"
            android:title="@string/title_navbar" />

        <PreferenceScreen
            android:key="nav_ring"
            android:fragment="com.android.settings.demented.NavRingTargets"
            android:title="@string/interface_navring_settings_title" />

        <PreferenceScreen
            android:key="ribbons"
            android:fragment="com.android.settings.demented.RibbonTargets"
            android:title="@string/ribbon_settings_title" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="general_settings"
        android:title="@string/general_settings_title">

        <CheckBoxPreference
            android:key="system_power_crt_screen_off"
            android:title="@string/system_power_crt_screen_off_title" />

        <ListPreference
            android:key="system_power_crt_mode"
            android:dialogTitle="@string/system_power_crt_mode_dialog_title"
            android:title="@string/system_power_crt_mode_title"
            android:entries="@array/entries_system_power_crt_mode"
            android:entryValues="@array/values_system_power_crt_mode"
            android:dependency="system_power_crt_screen_off" />

        <CheckBoxPreference
            android:key="force_dualpanel"
            android:title="@string/multipane_ui"
            android:defaultValue="false" />

        <PreferenceScreen
            android:key="notification_pulse"
            android:title="@string/notification_pulse_title"
            android:fragment="com.android.settings.notificationlight.NotificationLightSettings" />

        <PreferenceScreen
            android:key="battery_light"
            android:title="@string/battery_light_title"
            android:fragment="com.android.settings.notificationlight.BatteryLightSettings" />

    </PreferenceCategory>

</PreferenceScreen>
